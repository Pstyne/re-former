<h1>Edit User</h1>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <h3>User was not edited!</h3>
    <ul>
    <% @user.errors.full_messages.each do |m|%>
      <li><%= m %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.label :name, "Enter your name" %><br>
  <%= f.text_field :name, value: "Bob" %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email, placeholder: "example@example.com" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit "Submit" %>
<% end %>